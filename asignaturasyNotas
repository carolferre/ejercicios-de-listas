# Mi solución:



def asignaturasyNotas():
    asignaturas=["Matemáticas","Física","Química","Historia","Lengua"]
    notas=[]
    nota=""
    i=1
    for i in range(len(asignaturas)):
        print("¿Qué notas has sacado en  ",asignaturas[i]," ?")
        nota=(input())
        notas.append(nota)
        print("La nota que has sacado en ",asignaturas[i]," es = ",nota)
    print("El total de asignaturas es= ",asignaturas)
    print("Y el total de notas es= ",notas)
asignaturasyNotas()
